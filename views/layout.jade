head
  meta(charset='utf-8')
  if locals.article != null
    title= locals.article
  else if locals.wiki != null
    title= locals.wiki + ":ページリスト"
  else
    title WYSIWIKI
  meta(name='description', content='wysiwiki')
  meta(name='author', content='wysiwiki')
  // Mobile Specific
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(http-equiv='Content-Script-Type', content='text/javascript')
  meta(http-equiv='Content-Style-Type', content='text/css')

  // Google Fonts Api
  link(href='http://fonts.googleapis.com/css?family=Esteban|Jacques+Francois|Geo:400,400italic', rel='stylesheet', type='text/css')


  // CSS
  != css("bootstrap.min")
  //!= css("bootstrap-responsive.min")
  != css('jquery-ui-1.10.2.min')
  != css('hubinfo.min')
  != css('normalize')
  != css('foundation.min')

  != css('app')

  // JS
  != js('jquery-1.9.1.min')
  //!= js('bootstrap.min')
  != js('jquery.pjax')
  != js('underscore')
  != js('backbone')
  != js('jquery-ui-1.10.2.min')
  != js('hubinfo.min')
  != js('freshereditor.min')
  != js('foundation.min') //Foundation以下にいろいろ入ってる
  != js('vendor/custom.modernizr')
  != js('vendor/zepto')

  //!= js('socket.io/socket.io.js')
  //サーバごとに変える
  script(src= '/socket.io/socket.io.js')

  != js('app')

body
  .row
    .large-2.columns.panel
      h2.logo WYSIWIKI

      .navigation
        a.small.button.expand(href= '/') Home
        if locals.wiki != null
          a.small.button.expand(href='/'+locals.wiki) Page List

      if locals.wiki != null
        #wiki-connection
          グループ接続人数
          #wiki-number.pull-right
      if locals.article != null
        #article-connection
          ページ接続人数
          #article-number.pull-right

    .large-10.columns.panel
      if locals.article != null
        h3.title= locals.article
      else if locals.wiki != null
        h3= locals.wiki+ " "
          small ページ一覧
      block index-content
      block list-content
      #content-editable(contenteditable='true')
        block content
      br
      if locals.article != null
        .small ↑クリックして編集可能
